{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "cosmos:evolved_skeleton_boss",
      "spawn_category": "monster",
      "is_spawnable": true,
      "is_summonable": true
    },
    "component_groups": {
      "minecraft:lightning_immune": {
        "minecraft:damage_sensor": {
          "triggers": {
            "on_damage": { "filters": { "other_with_families": "lightning" } },
            "deals_damage": false
          }
        }
      },
        "cosmos:no_player": {
          "minecraft:movement": {
           "value": 0.40
          }
      },
      "cosmos:player": {
          "minecraft:movement": {
           "value": 0
          },
        "minecraft:damage_sensor": {
        "triggers": {
          "cause": "all",
          "deals_damage": false
        }
      }
      }
    },

    "components": {
      "minecraft:is_hidden_when_invisible": {
      },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 5 + (query.equipment_count * Math.Random(1,3)) : 0"
      },
      "minecraft:collision_box": {
        "width": 1,
        "height": 4
      },
      "minecraft:type_family": {
        "family": [ "evolved_skeleton_boss", "mob" ]
      },
      "minecraft:scale": {
        "value": 1.20
      },
      "minecraft:fire_immune": true,
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0,
        "breathes_water": true
      },
      "minecraft:health": {
        "value": 150,
        "max": 150
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/evolved_skeleton_boss.json"
      },
      "minecraft:navigation.walk": {
        "is_amphibious": true,
        "avoid_sun": true,
        "avoid_water": true
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:knockback_resistance": {
            "value": 1
      },
      "minecraft:push_through": {
            "value": 1
      },
      "minecraft:pushable": {
            "is_pushable": false,
            "is_pushable_by_piston": false
      },
      "minecraft:nameable": {
      },
      "minecraft:despawn": {
        "despawn_from_distance": {}
      },
      "minecraft:behavior.nearest_attackable_target": {
        "must_see": true,
        "must_see_forget_duration": 50,
        "priority": 1,
        "reselect_targets": false,
        "within_radius": 0,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 64
          },
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "baby_turtle"
                },
                {
                  "test": "in_water",
                  "subject": "other",
                  "operator": "!=",
                  "value": true
                }
              ]
            },
            "max_dist": 16
          }
        ]
      },
      "minecraft:behavior.ranged_attack": {
            "attack_interval_max": 0.5,
            "attack_interval_min": 0.5,
            "attack_radius": 0
      },
      "minecraft:behavior.random_stroll": {
        "priority": 9,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 5,
        "look_distance": 8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 10
      },
      "minecraft:physics": {
      },
      "minecraft:conditional_bandwidth_optimization": {
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "cosmos:no_player"
          ]
        }
      },
      "minecraft:spring_trap": {
        "add": {
          "component_groups": [
            "minecraft:lightning_immune"
          ]
        }
      },
      "cosmos:player": {
        "remove": {
          "component_groups": [
            "cosmos:no_player"
          ]
        },
        "add": {
          "component_groups": [
            "cosmos:player"
          ]
        }
      },
      "cosmos:no_player": {
        "remove": {
          "component_groups": [
            "cosmos:player"
          ]
        },
        "add": {
          "component_groups": [
            "cosmos:no_player"
          ]
        }
      }
    }
  }
}
