{
    "format_version": "1.20.0",
    "minecraft:entity": {
        "description": {
            "identifier": "cosmos:coal_generator",
            "is_summonable": true,
			"properties": {
				"cosmos:power": {
					"type": "int",
					"client_sync": true,
					"range": [0, 120],
					"default": 0 
				},
				"cosmos:direction": {
					"type": "enum",
					"client_sync": true,
					"values": ["north", "east", "south", "west"],
					"default": "north"
				} 
			}
        },
        "component_groups": {
			"shrink": {
				"minecraft:collision_box": {
					"width": 0.7,
					"height": 0.7
				},
				"minecraft:timer": {
					"time": 0.1,
					"time_down_event": {
						"event":"cosmos:expand"
					}
				}
			},
			"expand": {
				"minecraft:collision_box": {
					"width": 1,
					"height": 1
				}
			}
		},
        "components": {
            "minecraft:damage_sensor": {
                "triggers": {
                    "deals_damage": false
                }
            },
            "minecraft:type_family": {
                "family": [
                    "cosmos",
					"generator"
                ]
            },
            "minecraft:collision_box": {
                "width": 1,
                "height": 1
            },
            "minecraft:knockback_resistance": {
                "value": 100,
                "max": 100
            },
            "minecraft:inventory": {
                "container_type": "container",
                "inventory_size": 1
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": false
            },
            "minecraft:physics": {
                "has_gravity": false
            }
        },
		"events": {
			"cosmos:shrink": {
				"add": {
					"component_groups": ["shrink"]
				}
			},
			"cosmos:expand": {
				"remove": {
					"component_groups": ["shrink"]
				},
				"add": {
					"component_groups": ["expand"]
				}
			}
		}
    }
}