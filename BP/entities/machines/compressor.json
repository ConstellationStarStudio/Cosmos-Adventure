{
    "format_version": "1.20.0",
    "minecraft:entity": {
        "description": {
            "identifier": "cosmos:machine:compressor",
			// "properties": {},
            "is_summonable": true
        },
        "component_groups": {
			"shrink": {
				"minecraft:collision_box": {
					"width": 0.7,
					"height": 0.7
				},
				"minecraft:timer": {
					"time": 0.1,
					"time_down_event": {
						"event":"cosmos:expand"
					}
				}
			},
			"expand": {
				"minecraft:collision_box": {
					"width": 1,
					"height": 1
				}
			},
			"despawn": {
				"minecraft:instant_despawn": {}
			},
			"highlight": {
				"minecraft:timer": {
					"looping": true,
					"time": 0.5,
					"time_down_event": {
						"event":"cosmos:highlight_paricles"
					}
				}
			}
		},
        "components": {
            "minecraft:damage_sensor": {
                "triggers": {
                    "deals_damage": false
                }
            },
            "minecraft:type_family": {
                "family": [
                    "cosmos"
                ]
            },
            "minecraft:collision_box": {
                "width": 1,
                "height": 1
            },
			"minecraft:health": {
				"value": 1,
				"max": 1,
				"min": 1
			},
            "minecraft:knockback_resistance": {
                "value": 100,
                "max": 100
            },
            "minecraft:inventory": {
                "container_type": "container",
                "inventory_size": 15
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": false
            },
            "minecraft:physics": {
                "has_gravity": false,
				"has_collision": false
            }
        },
		"events": {
			"cosmos:shrink": {
				"add": {
					"component_groups": ["shrink"]
				}
			},
			"cosmos:despawn": {
				"add": {
					"component_groups": ["despawn"]
				}
			},
			"cosmos:expand": {
				"remove": {
					"component_groups": ["shrink"]
				},
				"add": {
					"component_groups": ["expand"]
				}
			},
			"cosmos:highlight": {
				"add": {
					"component_groups": ["highlight"]
				}
			},
			"cosmos:highlight_paricles": {
				"queue_command": {
					"command": [
						"particle \"minecraft:villager_happy\" ~-0.5 ~1 ~-0.5",
						"particle \"minecraft:villager_happy\" ~-0.5 ~1 ~0.5",
						"particle \"minecraft:villager_happy\" ~0.5 ~1 ~-0.5",
						"particle \"minecraft:villager_happy\" ~0.5 ~1 ~0.5",
						"particle \"minecraft:villager_happy\" ~-0.5 ~1 ~",
						"particle \"minecraft:villager_happy\" ~ ~1 ~-0.5",
						"particle \"minecraft:villager_happy\" ~ ~1 ~0.5",
						"particle \"minecraft:villager_happy\" ~0.5 ~1 ~",
						"particle \"minecraft:villager_happy\" ~-0.5 ~ ~-0.5",
						"particle \"minecraft:villager_happy\" ~-0.5 ~ ~0.5",
						"particle \"minecraft:villager_happy\" ~0.5 ~ ~-0.5",
						"particle \"minecraft:villager_happy\" ~0.5 ~ ~0.5",
						"particle \"minecraft:villager_happy\" ~-0.5 ~ ~",
						"particle \"minecraft:villager_happy\" ~ ~ ~-0.5",
						"particle \"minecraft:villager_happy\" ~ ~ ~0.5",
						"particle \"minecraft:villager_happy\" ~0.5 ~ ~",
						"particle \"minecraft:villager_happy\" ~-0.5 ~0.5 ~-0.5",
						"particle \"minecraft:villager_happy\" ~-0.5 ~0.5 ~0.5",
						"particle \"minecraft:villager_happy\" ~0.5 ~0.5 ~-0.5",
						"particle \"minecraft:villager_happy\" ~0.5 ~0.5 ~0.5"
					]
				}
			}
		}
    }
}