{
  "format_version": "1.20.80",
  "minecraft:block": {
    "description": {
      "identifier": "cosmos:electric_arc_furnace",
      "menu_category": {
        "category": "items"
      },
      "traits": {
        "minecraft:placement_direction": {
          "enabled_states": ["minecraft:cardinal_direction"],
          "y_rotation_offset": 180
        }
      }
    },
    "components": {
      "tag:machine": {},
      //"minecraft:custom_components": ["cosmos:machine"],
      "minecraft:geometry": "minecraft:geometry.full_block",
      "minecraft:destructible_by_explosion": false,
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 0.5
      },
      "minecraft:material_instances": {
        "up": { "render_method": "opaque", "texture": "advanced_machine_blank" },
        "down": { "render_method": "opaque", "texture": "advanced_machine_blank" },
        "north": { "render_method": "opaque", "texture": "electric_arc_furnace" },
        "east": { "render_method": "opaque", "texture": "advanced_energy_input" },
        "south": { "render_method": "opaque", "texture": "advanced_machine_side" },
        "west": { "render_method": "opaque", "texture": "advanced_machine_side" }
      },
      "minecraft:tick": {
         "looping": true,
         "interval_range": [1, 1]
      }
    },
    "permutations": [
        {
          "condition": "q.block_state('minecraft:cardinal_direction') == 'south'",
          "components": {
            "minecraft:transformation": { "rotation": [0, 180, 0] }
          }
        },
        {
          "condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
          "components": {
            "minecraft:transformation": { "rotation": [0, 90, 0] }
          }
        },
        {
          "condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
          "components": {
            "minecraft:transformation": { "rotation": [0, -90, 0] }
          }
        }
    ]
  }
}