{
    "format_version": "1.21.50",
    "minecraft:block": {
        "description":{
            "identifier": "cosmos:tier1_treasure_chest",
            "states": {
                "cosmos:chest_state": ["locked", "unlocked", "open"]
            },
            "traits": {
              "minecraft:placement_direction": {
                "enabled_states": ["minecraft:cardinal_direction"],
                "y_rotation_offset": 180
              }
            }
        },
        "components":{
            "minecraft:material_instances": {
                "*": { "texture": "tier1_treasure_chest", "render_method": "opaque"}
            },
            "minecraft:destructible_by_mining": false,
            "tag:custom_chest": {}, 
            "tag:chest": {},
            "tag:wood": {},
            "minecraft:flammable": false,
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 0.8
            },
            "minecraft:light_dampening": 0,
            "minecraft:collision_box":{
                "origin":[-7, 0, -7],
                "size":[14, 14, 14]
            },
            "minecraft:selection_box":{
                "origin":[-7, 0, -7],
                "size":[14, 14, 14]
            }
        },
        "permutations": [
            {
                "condition": "q.block_state('cosmos:chest_state') == 'locked'",
                "components": {
                    "minecraft:geometry":{
                        "identifier": "geometry.treasure_chest"
                    }
                }
            },
            {
                "condition": "q.block_state('cosmos:chest_state') == 'unlocked'",
                "components": {
                    "minecraft:geometry":{
                        "identifier": "geometry.unlocked_chest"
                    }
                }
            },
            {
                "condition": "q.block_state('cosmos:chest_state') == 'open'",
                "components": {
                    "minecraft:geometry":{
                        "identifier": "geometry.open_chest"
                    }
                }
            },
            {
              "condition": "q.block_state('minecraft:cardinal_direction') == 'south'",
              "components": {
                "minecraft:transformation": { "rotation": [0, 180, 0] }
              }
            },
            {
              "condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
              "components": {
                "minecraft:transformation": { "rotation": [0, 90, 0] }
              }
            },
            {
              "condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
              "components": {
                "minecraft:transformation": { "rotation": [0, -90, 0] }
              }
            },      {
                "condition": "q.block_state('custom:open') == 0",
                "components": {
                    "minecraft:geometry": "geometry.custom_chest"
                }
            },
            {
                "condition": "q.block_state('custom:open') == 1",
                "components": {
                    "minecraft:geometry": "geometry.custom_chest1"
                }
            },
            {
                "condition": "q.block_state('custom:open') == 2",
                "components": {
                    "minecraft:geometry": "geometry.custom_chest2"
                }
            },
            {
                "condition": "q.block_state('custom:open') == 3",
                "components": {
                    "minecraft:geometry": "geometry.custom_chest3"
                }
            },
            {
                "condition": "q.block_state('custom:open') == 4",
                "components": {
                    "minecraft:geometry": "geometry.custom_chest4"
                }
            },
            {
                "condition": "q.block_state('custom:open') == 5",
                "components": {
                    "minecraft:geometry": "geometry.custom_chest5"
                }
            }
        ]}
}