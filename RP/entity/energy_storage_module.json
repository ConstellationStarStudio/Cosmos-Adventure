{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "cosmos:energy_storage_module",
      "materials": { "default": "shulker" },
      "textures": {
        "up": "textures/blocks/machine_blank",
        "down": "textures/blocks/machine_blank",
        "north": "textures/blocks/energy_storage_module_0",
        "east": "textures/blocks/machine_output",
        "south": "textures/blocks/energy_storage_module_0",
        "west": "textures/blocks/machine_input"
      },
      "geometry": {
        "up": "geometry.up",
        "down": "geometry.down",
        "north": "geometry.north",
        "east": "geometry.east",
        "south": "geometry.south",
        "west": "geometry.west"
      },
      "render_controllers": [ 
	    "controller.render.up",
	    "controller.render.down",
	    "controller.render.north",
	    "controller.render.east",
	    "controller.render.south",
	    "controller.render.west"
	  ],
	  "animations": {
          "face_north": "animation.machine.face_north",
          "face_east": "animation.machine.face_east",
          "face_south": "animation.machine.face_south",
          "face_west": "animation.machine.face_west"
      },
      "scripts": {
        "animate": [
          {"face_north":"query.property('cosmos:direction') == 'north'"},
          {"face_east":"query.property('cosmos:direction') == 'east'"},
          {"face_south":"query.property('cosmos:direction') == 'south'"},
          {"face_west":"query.property('cosmos:direction') == 'west'"}
        ]
      }
    }
  }
}
