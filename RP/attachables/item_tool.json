{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "null",
            "materials": {
                "default": "entity_alphatest"
            },
            "textures": {
                "default": "textures/entity/null"
            },
            "geometry": {
                "default": "geometry.null"
            },
            "animations": {
                "first_person_main_hand": "animation.test.first_person_main_hand",
                "third_person_main_hand": "animation.test.third_person_main_hand",

                "default": "animation.null.default"
            },
            "scripts": {
                "pre_animation": [
                    "v.main_hand = c.item_slot == 'main_hand';"
                ],
                "animate": [
                    "default",
                    { "first_person_main_hand": "v.main_hand &&  c.is_first_person" },
                    { "third_person_main_hand": "v.main_hand && !c.is_first_person" }
                ]
            },
            "render_controllers": [ "controller.render.default" ]
        }
    }
}
