{
	"namespace": "hud",

	// this removes the action bar if it contains the text 'Position:'
	"hud_actionbar_text": {
		"$action_text": "$actionbar_text",
		"visible": "(('§.' + $action_text) - 'Position:' = ('§.' + $action_text)))",
		"controls": [
			{
				"actionbar_message": {
				"type": "label",
				"anchor_from": "center",
				"anchor_to": "center",
				"color": "$tool_tip_text",
				"enable_profanity_filter": true,
				"layer": 31,
				"text": "$action_text",
				"shadow": true,
				"localize": false,
				"alpha": "@hud.anim_actionbar_text_alpha_out"
				}
			}
		]
	},
		
	// replaces the vanilla coordinates panels with a custom actionbar
	"player_position": {
		"size": [ "100%c", "100%c" ],
    	"texture": "textures/empty",
		"controls": [],
		"factory": {
			"name": "hud_actionbar_text_factory",
			"control_ids": {
				"hud_actionbar_text": "custom_coordinates_text@hud.custom_coordinates_text"
			}
		}
	},

	// custom actionbar for chat stack
	"custom_coordinates_text": {
		"type": "image",
		"anchor_from": "top_left",
		"anchor_to": "top_left",
		"size": [ "100%c + 6px", "100%c + 2px" ],
		"texture": "textures/ui/Black",
		"alpha": 0.7,
		"$action_text": "$actionbar_text",
		"$position": "($action_text - 'Position:')",
		"visible": "(not (('§.' + $action_text) - 'Position:' = ('§.' + $action_text)))",
		"bindings": [
			{
				"binding_name": "#player_position_visible",
				"binding_name_override": "#visible",
				"binding_condition": "always",
				"binding_type": "global"
			},
			{
				"binding_name": "#hud_text_background_alpha",
				"binding_name_override": "#alpha"
			}
		],
		"controls": [
			{ "text_hieght": {
				"type": "label",
				"text": "§.",
				"size": [ "100%c", "default" ],
				"offset": [ 0, 1 ],
				"controls": [
					{ "position_stack": {
						"type": "stack_panel",
						"orientation": "horizontal",
						"size": [ "100%c", "100%" ],
						"controls": [
							{
								"position": {
									"type": "label",
									"layer": 31,
									"text": "custom.coords",
									"localize": true,
									"alpha": "@hud.anim_actionbar_text_alpha_out"
								}
							},
							{
								"coords": {
									"type": "label",
									"layer": 31,
									"text": "($action_text - 'Position')",
									"alpha": "@hud.anim_actionbar_text_alpha_out"
								}
							}
						]
					}}
				]
			}}
		]
	},


	// this replaces the vanilla title panel with a panel that contains vanilla and custom titles
	"root_panel/hud_title_text_area": {
		"factory": {
			"name": "hud_title_text_factory",
			"control_ids": {
				"hud_title_text": "hud_title_text@hud.titles_panel"
			}
		}
	},

	// displays the custom titles if it contains the text 'cosmos:'; otherwise, it displays the vanilla title
	"titles_panel": {
		"type": "panel",
		"controls": [
			{ "default_title@hud.hud_title_text": {
				"bindings": [
					{
						"binding_name": "#hud_title_text_string",
						"binding_name_override": "#title_text",
						"binding_type": "global"
					},
					{
						"binding_type": "view",
						"source_property_name": "(#title_text - 'cosmos:' = #title_text)",
						"target_property_name": "#visible"
					}
				]
			}},
			{ "cosmos_title@hud.space_information": {
				"bindings": [
					{
						"binding_name": "#hud_title_text_string",
						"binding_name_override": "#title_text",
						"binding_type": "global"
					},
					{
						"binding_type": "view",
						"source_property_name": "(not (#title_text - 'cosmos:' = #title_text))",
						"target_property_name": "#visible"
					}
				]
			}}
		]
	},
	
	// a custom title
	"space_information": {
		"type": "panel",
		"layer": 1,
		"controls": [
			{ "o2_and_t": {
				"type": "image",
				"texture": "textures/ui/cosmos/oxygen_and_temperature",
				"size": [ 49, 47 ],
				"anchor_from": "top_right",
				"anchor_to": "top_right",
				"offset": [ -10, 10 ],
				"controls": [
					{
						"oxygen1": {
							"type": "panel",
							"size": [ 1, 1 ],
							"anchor_from": "bottom_left",
							"anchor_to": "bottom_left",
							"offset": [ 11, -1 ],
							"controls": [
								{
									"clipper": {
										"type": "panel",
										"clips_children": true,
										"anchor_from": "bottom_left",
										"anchor_to": "bottom_left",
										"size": [ "100%c", 1 ],
										"controls": [
											{
												"image": {
													"type": "image",
													"texture": "textures/ui/cosmos/oxygen_bar_fill",
													"size": [ 17.5, 45 ],
													"anchor_from": "bottom_left",
													"anchor_to": "bottom_left"
												}
											}
										],
										"bindings": [
											{
												"binding_name": "#hud_title_text_string",
												"binding_name_override": "#title",
												"binding_type": "global"
											},
											{
												"binding_type": "view",
												"source_property_name": "(#title - 'cosmos:' - '§f' - '§r')",
												"target_property_name": "#data"
											},
											{
												"binding_type": "view",
												"source_property_name": "(#data - 'O1:')",
												"target_property_name": "#o1"
											},
											{
												"binding_type": "view",
												"source_property_name": "#o1",
												"target_property_name": "#size_binding_y"
											}
										]
									}
								}
							]
						}
					},
					{
						"oxygen2": {
							"type": "panel",
							"size": [ 1, 1 ],
							"anchor_from": "bottom_left",
							"anchor_to": "bottom_left",
							"offset": [ 31, -1 ],
							"controls": [
								{
									"clipper": {
										"type": "panel",
										"clips_children": true,
										"anchor_from": "bottom_left",
										"anchor_to": "bottom_left",
										"size": [ "100%c", 1 ],
										"controls": [
											{
												"image": {
													"type": "image",
													"texture": "textures/ui/cosmos/oxygen_bar_fill",
													"size": [ 17.5, 45 ],
													"anchor_from": "bottom_left",
													"anchor_to": "bottom_left"
												}
											}
										],
										"bindings": [
											{
												"binding_name": "#hud_title_text_string",
												"binding_name_override": "#title",
												"binding_type": "global"
											},
											{
												"binding_type": "view",
												"source_property_name": "(#title - 'cosmos:' - '§f' - '§r')",
												"target_property_name": "#data"
											},
											{
												"binding_type": "view",
												"source_property_name": "(#data - 'O1:')",
												"target_property_name": "#o1"
											},
											{
												"binding_type": "view",
												"source_property_name": "(#data - ('O1:' + #o1 + ',O2:'))",
												"target_property_name": "#o2"
											},
											{
												"binding_type": "view",
												"source_property_name": "#o2",
												"target_property_name": "#size_binding_y"
											}
										]
									}
								}
							]
						}
					},
					{
						"temperature": {
							"type": "panel",
							"size": [ 1, 1 ],
							"anchor_from": "bottom_left",
							"anchor_to": "bottom_left",
							"offset": [ 1, -1 ],
							"controls": [
								{
									"offsetter": {
										"type": "panel",
										"size": [ 1, 1 ],
										"controls": [
											{
												"very_cold": {
													"type": "image",
													"fill": true,
													"texture": "textures/white",
													"size": [ 7, 2 ],
													"anchor_from": "top_left",
													"anchor_to": "bottom_left",
													"color": [ 0, 0.4, 1 ],
													"$condition": "(#t < 16)",
													"bindings": "$set_temperature_color"
												}
											},
											{
												"cold": {
													"type": "image",
													"fill": true,
													"texture": "textures/white",
													"size": [ 7, 2 ],
													"anchor_from": "top_left",
													"anchor_to": "bottom_left",
													"color": [ 0, 0.8, 0.7 ],
													"$condition": "(#t > 15 and #t < 33)",
													"bindings": "$set_temperature_color"
												}
											},
											{
												"moderate": {
													"type": "image",
													"fill": true,
													"texture": "textures/white",
													"size": [ 7, 2 ],
													"anchor_from": "top_left",
													"anchor_to": "bottom_left",
													"color": [ 0, 0.8, 0.1 ],
													"$condition": "(#t > 32 and #t < 50)",
													"bindings": "$set_temperature_color"
												}
											},
											{
												"hot": {
													"type": "image",
													"fill": true,
													"texture": "textures/white",
													"size": [ 7, 2 ],
													"anchor_from": "top_left",
													"anchor_to": "bottom_left",
													"color": [ 0.9, 0.7, 0 ],
													"$condition": "(#t > 49 and #t < 67)",
													"bindings": "$set_temperature_color"
												}
											},
											{
												"very_hot": {
													"type": "image",
													"fill": true,
													"texture": "textures/white",
													"size": [ 7, 2 ],
													"anchor_from": "top_left",
													"anchor_to": "bottom_left",
													"color": [ 0.9, 0.3, 0 ],
													"$condition": "(#t > 66)",
													"bindings": "$set_temperature_color"
												}
											}
										],
										"bindings": [
											{
												"binding_name": "#hud_title_text_string",
												"binding_name_override": "#title",
												"binding_type": "global"
											},
											{
												"binding_type": "view",
												"source_property_name": "(#title - 'cosmos:' - '§f' - '§r')",
												"target_property_name": "#data"
											},
											{
												"binding_type": "view",
												"source_property_name": "(#data - 'O1:')",
												"target_property_name": "#o1"
											},
											{
												"binding_type": "view",
												"source_property_name": "(#data - ('O1:' + #o1 + ',O2:'))",
												"target_property_name": "#o2"
											},
											{
												"binding_type": "view",
												"source_property_name": "(#data - ('O1:' + #o1 + ',O2:' + #o2 + ',T:'))",
												"target_property_name": "#t"
											},
											{
												"binding_type": "view",
												"source_property_name": "#t",
												"target_property_name": "#size_binding_y"
											}
										]
									}
								}
							]
						}
					}
				]
			}}
		]
	}
}