								"color": [1, 1, 0],
								"size": "$selection_size",
								"layer": 7,
								"anims": [
									"@cosmos.fade_out"
								]
							}
						}
					],
					"bindings": "$read_buttons"
				}
			},
			{
				"planet_image": {
					"type": "image",
					"texture": "$texture",
					"size": "$size",
					"anchor_to": "center",
					"anchor_from": "bottom_right",
