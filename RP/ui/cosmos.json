		"type": "panel",
		"size": [8, 8],
		"$selection_size": [16, 16],
		"anchor_to": "top_left",
		"anchor_from": "top_left",
		"offset": "$offset",
		"$size": [8, 8],
		"bindings": "$set_coords",
		"controls": [
			{
				"button@cosmos.button": {
					"size": [16, 16],
					"$selection_size": "$selection_size",
					"$action": "button.form_button_click",
					"anchor_to": "center",
					"anchor_from": "bottom_right",
					"controls": [
						{
							"selection_box": {
								"type": "image",
								"texture": "textures/ui/cosmos/selection_box",
