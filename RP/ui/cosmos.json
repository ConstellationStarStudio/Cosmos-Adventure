	"form_buttons": {
		"type": "stack_panel",
		"factory":{
			"name": "buttons",
			"control_name": "$buttons"
		},
		"collection_name": "form_buttons",
		"bindings": [
			{
				"binding_name": "#form_button_length",
				"binding_name_override": "#collection_length"
			}
		]
	},
	
	"button": {
		"type": "button",
		"default_control": "default",
		"hover_control": "hover",
		"pressed_control": "hover",
		"sound_name": "random.click",
		"$action": "button.menu_exit",
		"size": [ 32, 32 ],
		"button_mappings": [
			{
				"from_button_id": "button.menu_select",
				"to_button_id": "$action",
				"mapping_type": "pressed"
			}
		],
		"controls": [
			{
				"default": {"type": "panel"}
			},
			{
				"hover": {"type": "panel"}
			}
		]
	},
	
	"fade_in": {
		"anim_type": "alpha",
		"duration": 2,
		"from": 0,
		"to": 1,
		"next": "@cosmos.wait_to_fade_out"
	},
	"wait_to_fade_out": {
		"anim_type": "wait",
		"duration": 2,
		"next": "@cosmos.fade_out"
	},
	"fade_out": {
		"anim_type": "alpha",
		"duration": 2,
		"from": 1,
		"to": 0,
		"next": "@cosmos.wait_to_fade_in"
	},
	"wait_to_fade_in": {
		"anim_type": "wait",
		"duration": 2,
		"next": "@cosmos.fade_in"
	}
	
}
