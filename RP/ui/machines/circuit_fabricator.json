{
    "namespace": "circuit_fabricator",
	
    "interface@machines.dynamic_interface": {
        "$size": ["100%", 192],
        "$content": [
			{ "title": {
				"type": "label",
				"text": "Circuit Fabricator",
				"color": "$title_text_color",
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 10, 5 ]
			}},
			{ "background": {
				"type":"image",
				"texture": "textures/ui/cosmos/circuit_fabricator_background",
				"size": [155, 87],
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [14, 16]
			}},
			{ "diamond_input@machines.item_slot": {
				"$index": 0,
				"$overlay_texture": "textures/items/diamond",
				"$overlay_alpha": 0.25,
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 14, 16 ]
			}},
			{ "silicon_input1@machines.item_slot": {
				"$index": 1,
				"$overlay_texture": "textures/items/raw_silicon",
				"$overlay_alpha": 0.25,
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 73, 45 ]
			}},
			{ "silicon_input2@machines.item_slot": {
				"$index": 2,
				"$overlay_texture": "textures/items/raw_silicon",
				"$overlay_alpha": 0.25,
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 73, 63 ]
			}},
			{ "redstone_input@machines.item_slot": {
				"$index": 3,
				"$overlay_texture": "textures/items/redstone_dust",
				"$overlay_alpha": 0.25,
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 121, 45 ]
			}},
			{ "input_slot@machines.item_slot": {
				"$index": 4,
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 144, 19 ]
			}},
			{ "battery_slot@machines.item_slot": {
				"$index": 5,
				"$overlay_texture": "textures/ui/extra_slots/power",
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 5, 68 ]
			}},
			{ "output_slot@machines.item_slot": {
				"$index": 6,
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 151, 85 ]
			}},
            { "energy_bar@machines.energy_bar": {
                "$index": 7,
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "offset": [ 17, 88 ]
            }},
			// { "progress@circuit_fabricator.progress_bar": {
			// 	"$index": 8,
			// 	"anchor_from": "top_left",
			// 	"anchor_to": "top_left",
			// 	"offset": [ 17, 88 ]
			// }},
            { "status@machines.item_text": {
                "$index": 9,
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "offset": [ 92, 80 ]
            }}
		]
    },

	"progress_hover@cosmos.button": {
		"$action": "",
		"size": [53, 12],
		"anchor_from": "top_left",
		"anchor_to": "top_left",
		"controls": [
			{
				"hover": {
					"type": "custom",
					"renderer": "hover_text_renderer",
					"layer": 50,
					"bindings": [
						{
							"binding_name": "#hover_text",
							"binding_type": "collection",
							"binding_collection_name": "container_items"
						},
						{
							"binding_type": "view",
							"source_property_name": "(#hover_text - '§o')",
							"target_property_name": "#hover_text"
						}
					]
				}
			}
		],
		"bindings": [
			{
				"binding_name": "#hover_text",
				"binding_type": "collection",
				"binding_collection_name": "container_items"
			},
			{
				"binding_type": "view",
				"source_property_name": "(not(#hover_text - 'Progress' = #hover_text))",
				"target_property_name": "#visible"
			}
		]
	},
	
	"progress_bar": {
		"type": "panel",
		"size": [1, 0],
		"anchor_to": "top_left",
		"anchor_from": "top_left",
		"controls": [
			{
				"clipper": {
					"type": "panel",
					"clips_children": true,
					"offset": [1, 1],
					"size": [1, 10],
					"anchor_to": "top_left",
					"anchor_from": "top_left",
					"controls": [
						{
							"image": {
								"anchor_to": "top_left",
								"anchor_from": "top_left",
								"type": "image",
								"size": [51, 30],
								"texture": "textures/ui/cosmos/fabricating"
							}
						}
					],
					"bindings": [
						{
							"binding_name": "#hover_text",
							"binding_name_override": "#progress",
							"binding_type": "collection",
							"binding_collection_name": "container_items"
						},
						{
							"binding_type": "view",
							"source_property_name": "(#progress - 'cosmos:§prog' - '§o' - '§f' )",
							"target_property_name": "#amount"
						},
						{
							"binding_type": "view",
							"source_property_name": "(not(#progress - 'cosmos:§prog' = #progress))",
							"target_property_name": "#visible"
						},
						{
							"binding_type": "view",
							"source_property_name": "#amount",
							"target_property_name": "#size_binding_x"
						}
					]
				}
			}
		]
	},
    "main@machines.tall_screen": {
        "$machine": "circuit_fabricator",
        "controls": [
            {
                "progress": {
					"type":"image",
					"texture": "textures/ui/cosmos/progress_bar",
                    "offset": [ 22, -29 ],
                    "size": [ 53, 12 ],
					"controls": [
						{
							"progress@machines.item_data": {
								"$name": "progress",
								"anchor_from": "top_left",
								"anchor_to": "top_left",
								"layer": 4
							}
						},
						{
							"progress_text@machines.item_data": {
								"$name": "progress_hover"
							}
						}
					]
                }
            }
        ]
    }
}
