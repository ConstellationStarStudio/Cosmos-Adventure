{
    "namespace": "electric_compressor",

    "interface@machines.dynamic_interface": {
        "$size": ["100%", 199],
        "$content": [
			{ "title": {
				"type": "label",
				"text": "Electric Compressor",
				"color": "$title_text_color",
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 10, 5 ]
			}},
			{ "input_grid@machines.item_grid": {
				"size": [ 54, 54 ],
				"grid_dimensions": [ 3, 3 ],
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 18, 17 ]
			}},
            { "output1@machines.item_slot": {
				"$index": 9,
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 137, 28 ]
            }},
            { "output2@machines.item_slot": {
				"$index": 10,
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 137, 46 ]
            }},
            { "battery_slot@machines.item_slot": {
				"$index": 11,
				"$overlay_texture": "textures/ui/extra_slots/power",
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 54, 74 ]
			}},
            { "energy_bar@machines.energy_bar": {
                "$index": 12,
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "offset": [ 17, 95 ]
            }},
			{ "progress@compressor.progress_bar": {
				"$index": 13,
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 77, 28 ]
			}},
            { "status@machines.item_text": {
				"$index": 14,
				"anchor_from": "top_left",
				"anchor_to": "top_left",
				"offset": [ 78, 75 ]
			}}
		]
	},

	"status@machines.text": {
		"text": "#text",
		"bindings": [
			{
				"binding_name": "#hover_text",
				"binding_name_override": "#status",
				"binding_type": "collection",
				"binding_collection_name": "container_items"
			},
			{
				"binding_type": "view",
				"source_property_name": "(#status - 'cosmos:' - '§o' - '§f' )",
				"target_property_name": "#text"
			},
			{
				"binding_type": "view",
				"source_property_name": "(not(#status - 'cosmos:  Status:' = #status))",
				"target_property_name": "#visible"
			}
		]
	},

	"progress": {
		"type": "panel",
		"size": [1, 0],
		"anchor_to": "top_left",
		"anchor_from": "top_left",
		"controls": [
			{
				"clipper": {
					"type": "panel",
					"clips_children": true,
					"size": [1, 17],
					"offset": [0, 9],
					"anchor_to": "top_left",
					"anchor_from": "top_left",
					"controls": [
						{
							"image": {
								"anchor_to": "top_left",
								"anchor_from": "top_left",
								"type": "image",
								"size": [52, 17],
								"texture": "textures/ui/cosmos/compressor_bar_fill"
							}
						}
					],
					"bindings": [
						{
							"binding_name": "#hover_text",
							"binding_name_override": "#progress",
							"binding_type": "collection",
							"binding_collection_name": "container_items"
						},
						{
							"binding_type": "view",
							"source_property_name": "(#progress - 'cosmos:§prog' - '§o' - '§f' )",
							"target_property_name": "#amount"
						},
						{
							"binding_type": "view",
							"source_property_name": "(not(#progress - 'cosmos:§prog' = #progress))",
							"target_property_name": "#visible"
						},
						{
							"binding_type": "view",
							"source_property_name": "#amount",
							"target_property_name": "#size_binding_x"
						}
					]
				}
			}
		]
	},

	"hammering": {
		"type": "image",
		"texture": "textures/ui/cosmos/compressor_on",
		"size": [15, 13],
		"bindings": [
			{
				"binding_name": "#hover_text",
				"binding_name_override": "#progress",
				"binding_type": "collection",
				"binding_collection_name": "container_items"
			},
			{
				"binding_type": "view",
				"source_property_name": "(#progress - 'cosmos:§prog' - '§o' - '§f' )",
				"target_property_name": "#amount"
			},
			{
				"binding_type": "view",
				"source_property_name": "(#amount > 26)",
				"target_property_name": "#visible"
			}
		]
	},

    "main@machines.tall_screen": {
        "$machine": "electric_compressor",
        "controls": [
            //{"test@machines.pixel_counter": {}},
			{ "label@machines.text": {
				"text": "Electric Compressor",
				"offset": [ 10, 10 ],
				"anchor_from": "top_left",
				"anchor_to": "top_left"
			}},
			{
				"input_grid@machines.item_grid": {
                    "offset": [ -38, -9 ],
					"size": [ 54, 54 ],
					"grid_dimensions": [ 3, 3 ]
				}
			},
			{
                "battery@machines.clipper": {
                    "offset": [ -19, 30],
                    "$grid_size": [ 1, 12 ],
                    "$grid_pixels": [18, 215],
                	"$overlay": "textures/ui/extra_slots/power"
                }
            },
            {
                "output_slot@machines.clipper": {
                    "offset": [ 63, -15 ],
                    "$grid_size": [ 1, 10 ],
                    "$grid_pixels": [ 20, 180]
                }
            },
			{
				"output_slot_two@machines.clipper": {
					"offset": [ 63, 3 ],
					"$grid_size": [ 1, 11 ],
					"$grid_pixels": [ 20, 200]
				}
		    },
            {
                "progress": {
					"type":"image",
					"texture": "textures/ui/cosmos/electric_compressor_bar",
                    "offset": [ 18, -9 ],
                    "size": [ 52, 25 ],
					"controls": [
						{
							"progress@machines.item_data": {
								"$name": "progress",
								"anchor_from": "top_left",
								"anchor_to": "top_left"
							}
						},
						{
							"hammer@machines.item_data": {
								"$name": "hammering",
								"anchor_from": "top_left",
								"anchor_to": "top_left",
								"offset": [24, 1]
							}
						}
					]
                }
            },
            {
                "status@machines.item_data": {
                    "$name": "status",
                    "offset": [ 20, 30 ],
                    "size": [ 18, 18 ],
					"layer": 4
                }
            },
			{
                "capacity@machines.old_energy_bar": {
                    "offset": [ -38, 45 ]
                }
            }
        ]
    }
}