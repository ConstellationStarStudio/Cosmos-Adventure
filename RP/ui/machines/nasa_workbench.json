    "namespace": "nasa_workbench",

	"left_side_button": {
		"type":"panel",
		"size": [ 85, 24 ],
		"bindings": "$visible_by_hover",
        "$prefix": "§side_button:",
		"controls": [
			{ "button@machines.old_button": {
                "$tag": "$prefix"
            }}
		]
	},

    "craft_button_visuals": {
        "type": "image",
        "texture": "('textures/items/' + $icon)",
        "size": [16, 16],
        "layer": 6,
        "bindings": [
            {
                "binding_name": "#hover_text",
                "binding_name_override": "#text",
                "binding_type": "collection",
                "binding_collection_name": "container_items"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not (#text = #text - $icon))",
                "target_property_name": "#visible"
            }
        ]
    },
    
    "craft_button_text": {
        "type": "custom",
        "renderer": "hover_text_renderer",
        "layer": 40,
        "bindings": [
            {
                "binding_name": "#hover_text",
                "binding_type": "collection",
                "binding_collection_name": "container_items"
            },
            {
                "binding_type": "view",
                "source_property_name": "(('§.' + #hover_text - '§f' - '§o' - '§craft_button:size'))",
                "target_property_name": "#storage"
            },
            {
                "binding_type": "view",
                "source_property_name": "($name + '\n§7Storage Space: ' + (#storage - $name - '\n§7Storage Space: '))",
                "target_property_name": "#hover_text"
            },
            {
                "binding_type": "view",
                "source_property_name": "#hover_text",
                "target_property_name": "#text"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not (#text = #text - $id))",
                "target_property_name": "#visible"
            }
        ]
    },

