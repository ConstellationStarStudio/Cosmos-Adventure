{
    "namespace": "machines",
	
	"screen_filler": {
		"type": "image",
		"texture": "textures/ui/cosmos/space",
		"alpha": 0.5,
		"layer": 20
	},

	"pixel_counter": {
		"type": "image",
		"texture": "textures/ui/pixel_unit",
		"tiled": true
	},

	"small_screen": {
		"type": "panel",
		"anchor_from": "top_left",
		"anchor_to": "top_left",
		"size": ["100%", "50%"]
	},

	"tall_screen": {
		"type": "panel",
		"anchor_from": "top_left",
		"anchor_to": "top_left",
		"offset": [0, -33],
		"size": ["100%", "50% + 33px"]
	},

	"taller_screen": {
		"type": "panel",
		"anchor_from": "top_left",
		"anchor_to": "top_left",
		"offset": [0, -53],
		"size": ["100%", "50% + 53px"]
	},

	"text": {
		"type": "label",
		"color": "$title_text_color",
		"layer": 2
	},

	"item_image": {
		"type":"image",
		"fill":true,
		"size": [16, 16],
		"uv_size": [16, 16],
		"layer": 10
	},
	"clipper": {
		"type": "panel",
		"size": [ 20, 18 ],
		"$offset": [ 0, 0 ],
		"clips_children": true,
		"$overlay": "", "$uv": [0, 0],
		"controls": [{"grid@machines.item_grid": {
			"anchor_from": "bottom_left",
			"anchor_to": "bottom_left",
			"grid_dimensions" : "$grid_size",
			"size" : "$grid_pixels",
			"offset": "$offset"
		}},
		{"overlay": {
			"type":"image",
			"size": [16, 16],
			"texture": "$overlay",
			"layer": 10
		}}]
	},

	"item_grid": { // 1(18) 2(36) 3(54) 4(72) 5(90) 6(108) 7(126) 8(144) 9(162) 10(180) 11(198) 12(216) 13(234) 14(252) 15(270) 16(288) 17(306) 18(324) 19(342) 20(360) 
		"type": "grid",
		"size": [ 18, 18 ],
		"$template": "chest.chest_grid_item",
		"grid_item_template": "$template",
        "collection_name": "container_items",
		"layer": 5
	},
	"item_data": {
		"type": "stack_panel",
		"factory":{
			"name": "buttons",
			"control_name": "($machine + '.' + $name)"
		},
		"collection_name": "container_items",
		"bindings": [
			{
				"binding_name": "(#zero + 20)",
				"binding_name_override": "#collection_length"
			}
		]
	},

	"ui_button@machines.new_item_data": {
		"$name": "ui_button_button"
	},
	
	"ui_button_button": {
		"type": "panel",
		"size": [0, 0],
		"controls": [{ "button@cosmos.button": {
			"size": [75, 18],
			"pressed_control": "pressed",
			"bindings": [
			  {
				"binding_type": "collection_details",
				"binding_collection_name": "container_items",
				"binding_condition": "once"
			  }
			],
			"button_mappings": [
				{
					"from_button_id": "button.menu_select",
					"to_button_id": "button.container_auto_place",
					"mapping_type": "pressed"
				},
				{
					"from_button_id": "button.menu_ok",
					"to_button_id": "button.container_auto_place",
					"mapping_type": "pressed"
				}
			],
			"controls": [
				{
					"default": {
						"type": "image",
						"texture": "textures/ui/cosmos/old_button"
					}
				},
				{
					"hover": {
						"type": "image",
						"texture": "textures/ui/cosmos/old_button_hover"
					}
				},
				{
					"pressed": {
						"type": "image",
						"texture": "textures/ui/cosmos/old_button_pressed"
					}
				},
				{
					"text": {
						"type": "label",
						"text": "#text",
						"shadow": true,
						"bindings": [
							{
								"binding_name": "#hover_text",
								"binding_name_override": "#text",
								"binding_type": "collection",
								"binding_collection_name": "container_items"
							},
							{
								"binding_type": "view",
								"source_property_name": "(#text - '§button' - '§o' - '§f' )",
								"target_property_name": "#text"
							}
						]
					}
				}
			]
		}}],
		"bindings": [
			{
				"binding_name": "#hover_text",
				"binding_type": "collection",
				"binding_collection_name": "container_items"
			},
			{
				"binding_type": "view",
				"source_property_name": "(not(#hover_text - '§button' = #hover_text))",
				"target_property_name": "#visible"
			}
		]
	},

	"new_item_data": {
		"type": "stack_panel",
		"factory":{
			"name": "buttons",
			"control_name": "('machines.' + $name)"
		},
		"collection_name": "container_items",
		"bindings": [
			{
				"binding_name": "(#zero + 20)",
				"binding_name_override": "#collection_length"
			}
		]
	},
	"liquid_tank": {
		"type":"image",
		"texture": "textures/ui/cosmos/tank_back",
		"layer": 2,
		"size": [ 18, 40 ],
		"controls": [
			{
				"liquid@machines.new_item_data": {
					"orientation": "horizontal",
					"$name": "liquid_bar",
					"layer": 3
				}
			},
			{
				"tank_front": {
					"type": "image",
					"layer": 4,
					"texture": "textures/ui/cosmos/tank_front"
				}
			},
			{
				"tank_hover@machines.new_item_data": {
					"$name": "tank_hover"
				}
			}
		]
	},
	"tank_hover@cosmos.button": {
		"$action": "",
		"size": [ 18, 40 ],
		"controls": [{
			"hover": {
				"type": "custom",
				"renderer": "hover_text_renderer",
				"layer": 50,
				"bindings": "$fetch_item_hover"
			}
		}],
		"bindings": [
			{
				"binding_name": "#hover_text",
				"binding_type": "collection",
				"binding_collection_name": "container_items"
			},
			{
				"binding_type": "view",
				"source_property_name": "(not(#hover_text - $tank_name = #hover_text))",
				"target_property_name": "#visible"
			}
		]
	},

	"liquid_bar": {
		"type": "panel",
		"size": [ 18, 40 ],
		"bindings": "$if_liquid",
		"controls": [
			{"unit": {
				"type": "panel",
				"size": [0, 1],
				"anchor_from": "bottom_left",
				"anchor_to": "bottom_left",
				"controls": [
					{
						"image": {
							"type": "image",
							"tiled": true,
							"texture": "('textures/ui/liquids/' + $liquid)",
							"anchor_from": "bottom_left",
							"anchor_to": "bottom_left",
							"size": [18, 1],
							"bindings": "$set_bar_height"
						}
					}
				]
			}}
		]
	},

	"energy_bar": {
		"type":"image",
		"texture": "textures/ui/cosmos/progress_bar",
		"layer": 2,
		"size": [ 55, 9 ],
		"controls": [
			{
				"overlay@machines.item_image": {
					"anchor_from": "left_middle",
					"anchor_to": "right_middle",
					"color": [0.9, 0.9, 0.9],
					"texture": "textures/ui/extra_slots/power"
				}
			},
			{
				"energy@machines.new_item_data": {
					"$name": "progress_bar",
					"anchor_from": "top_left",
					"anchor_to": "top_left"
				}
			},
			{
				"energy_text@machines.new_item_data": {
					"$name": "energy_hover"
				}
			}
		]
	},
	"energy_hover@cosmos.button": {
		"$action": "",
		"size": [ 55, 9 ],
		"controls": [{
			"hover": {
				"type": "custom",
				"renderer": "hover_text_renderer",
				"layer": 50,
				"bindings": "$fetch_item_hover"
			}
		}],
		"bindings": [
			{
				"binding_name": "#hover_text",
				"binding_type": "collection",
				"binding_collection_name": "container_items"
			},
			{
				"binding_type": "view",
				"source_property_name": "(not(#hover_text - 'Energy Storage' = #hover_text))",
				"target_property_name": "#visible"
			}
		]
	},
	"progress_bar": {
		"type": "panel",
		"size": [1, 0],
		"anchor_to": "top_left",
		"anchor_from": "top_left",
		"controls": [
			{
				"image": {
					"type": "image",
					"texture": "textures/ui/cosmos/progress_bar_fill",
					"color": [0.75, 0.66, 0.14],
					"size": [1, 9],
					"anchor_to": "top_left",
					"anchor_from": "top_left",
					"bindings": "$set_bar_weight",
					"$prefix": "cosmos:§energy"
				}
			}
		]
	},

    "interface": {
        "type": "panel",
		"$size": ["100%", "100%"],
        "controls": [
            { "container_gamepad_helpers@common.container_gamepad_helpers": {} },
            { "selected_item_details_factory@common.selected_item_details_factory": {} },
            { "item_lock_notification_factory@common.item_lock_notification_factory": {} },
            {
                "root_panel@common.root_panel": {
                    "layer": 1,
                    "controls": [
                        { "common_panel@common.common_panel": {
							"size": "$size",
							"anchor_from": "bottom_left",
							"anchor_to": "bottom_left"
						} },
                        {
                            "panel": {
                                "type": "panel",
                                "layer": 5,
                                "controls": [
                                    { "top_half@$screen": {} },
                                    { "bottom_half@common.inventory_panel_bottom_half_with_label": {} },
                                    { "hotbar_grid@common.hotbar_grid_template": {} },
                                    { "inventory_take_progress_icon_button@common.inventory_take_progress_icon_button": {} }
                                ]
                            }
                        },
                        { "inventory_selected_icon_button@common.inventory_selected_icon_button": {} },
                        { "gamepad_cursor@common.gamepad_cursor_button": {} }
                    ]
                }
            }
        ]
    }
}